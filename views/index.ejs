<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Writers Block</title>
    <style>
        *, *:before, *:after {
            box-sizing: border-box;
        }
        .content-list {
            display: grid;
            grid-gap: 6px;
        }
        .content-item {
            color: inherit;
            text-decoration: none;

            width: 80%;
            max-height: 240px;
            margin: 0 auto;
            overflow: hidden;
            opacity: 0.8;
            cursor: pointer;
            padding: 6px;
            border: 1px solid black;
            border-radius: 6px;
            position: relative;
        }
        .content-item:hover {
            opacity: 1;
        }
        .content-item:hover .content-item-read {
            opacity: 1;
        }
        .content-item-read {
            position: absolute;
            bottom: 6px;
            right: 6px;
            text-decoration: underline;
            opacity: 0;
        }
        .content-item img {
            max-height: 300px;
            max-width: 400px;
        }
    </style>
</head>
<body>
    <div class="content-list">
        <% contentList.forEach(function(contentItem){ %>
            <a href="/content/<%= contentItem.name %>" class="content-item">
                <%- contentItem.data %>
                <div class="content-item-read">Click to read the rest</div>
            </a>
        <% }) %>
    </div>
</body>
</html>